{
  "name": "@contactlab/shipit-clab-deploy",
  "version": "0.1.0",
  "description": "Set of deployment tasks for Shipit - Contactlab UI flavour",
  "main": "index.js",
  "engines": {
    "node": ">= 8",
    "npm": ">= 5.2.0"
  },
  "directories": {
    "test": "test",
    "lib": "lib",
    "tasks": "tasks"
  },
  "files": [
    "index.js",
    "tasks",
    "lib"
  ],
  "scripts": {
    "__pretest": "eslint ./tasks ./lib",
    "test": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/shipit-clab-deploy.git"
  },
  "keywords": [
    "shipit",
    "deploy",
    "task",
    "contactlab"
  ],
  "author": "Contactlab Front-end Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/contactlab/shipit-clab-deploy/issues"
  },
  "homepage": "https://github.com/contactlab/shipit-clab-deploy#readme",
  "devDependencies": {
    "ava": "0.24.0",
    "chai": "3.4.1",
    "eslint": "4.13.1",
    "eslint-config-contactlab": "1.0.0",
    "mocha": "2.1.0",
    "rewire": "3.0.2",
    "shipit-cli": "3.0.0",
    "sinon": "4.1.3",
    "sinon-as-promised": "4.0.0",
    "sinon-chai": "2.7.0"
  },
  "dependencies": {
    "bluebird": "3.0.6",
    "chalk": "1.0.0",
    "lodash": "4.6.1",
    "mkdirp": "0.5.0",
    "moment": "2.12.0",
    "path2": "0.1.0",
    "rimraf": "2.6.2",
    "shipit-utils": "1.1.3"
  },
  "ava": {
    "files": [
      "./test/unit/**/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "contactlab"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  }
}
