{
  "name": "@contactlab/shipit-clab-deploy",
  "version": "2.2.2",
  "description": "Set of deployment tasks for Shipit - Contactlab UI flavour",
  "author": "Contactlab",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/shipit-clab-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/contactlab/shipit-clab-deploy/issues"
  },
  "homepage": "https://github.com/contactlab/shipit-clab-deploy#readme",
  "keywords": [
    "shipit",
    "deploy",
    "task",
    "contactlab"
  ],
  "engines": {
    "node": ">= 8",
    "npm": ">= 5.2.0"
  },
  "directories": {
    "test": "test",
    "lib": "lib",
    "tasks": "tasks"
  },
  "files": [
    "index.js",
    "tasks",
    "lib"
  ],
  "main": "index.js",
  "scripts": {
    "pretest": "eslint ./tasks ./lib",
    "test": "nyc ava",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "postversion": "npm run changelog"
  },
  "dependencies": {
    "joi": "14.3.1"
  },
  "devDependencies": {
    "ava": "1.2.1",
    "conventional-changelog-cli": "2.0.12",
    "eslint": "5.14.1",
    "eslint-config-contactlab": "2.0.2",
    "nyc": "13.3.0",
    "shipit-cli": "4.2.0",
    "sinon": "7.2.5"
  },
  "ava": {
    "files": [
      "./test/**/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "contactlab"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/_helpers.js"
    ]
  }
}
